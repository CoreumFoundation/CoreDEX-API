{
  "compilerOptions": {
    "target": "es6",
    "rootDir": "./domain",
    "outDir": "./build/domain",
    "esModuleInterop": true,
    "strict": true,
    "declaration": true,
    "module": "ES2022",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["domain/**/*"],
  "exclude": ["node_modules", "client"]
}
